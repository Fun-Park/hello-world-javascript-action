    <approvalPageFields>
        <field>Name</field>
        <field>Claim_Approval_Status__c</field>
        <field>Total_Claim_Approval_Amount__c</field>
        <field>Scheduled_Claim_Amount__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Approve_the_Claim</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>SD15_CAR_Send_Claim_Approved_Email_alert</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_the_Approved_Date</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Senior_Claims_Officer</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
        <rejectionActions>
            <action>
                <name>Claim_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>SD15_CAR_Send_Claim_Rejected_Email_alert</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>As a QBCC Senior Claims Officer I want the permission to approve or reject any claim submitted that is up to $100,000 (Aggregate $300,000).</description>
    <emailTemplate>QBCC_Templates/Claims_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(
    NOT ISBLANK(Schedule__r.Quote__c),
    ISPICKVAL(Claim_Approval_Status__c, &quot;Pre-Approval&quot;), 
    Total_Claim_Approval_Amount__c &lt;= 100000,
    Aggregate_and_Claim_Pending_Amount__c  &lt;= 300000
)</formula>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>SD15_CAR_Update_to_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>SD15CAR &lt;100K Total Aggregat &lt;300K</label>
    <processOrder>5</processOrder>
    <recallActions>
        <action>
            <name>SD15_Recall_update_to_Pre_approval</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
